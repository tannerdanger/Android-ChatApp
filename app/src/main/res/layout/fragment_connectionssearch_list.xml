<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_connectionsearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_connectionsearch_users"
        android:name="group6.tcss450.uw.edu.chatapp.ConnectionsSearchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/et_connectionsearch_searchbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="56dp"
        android:isScrollContainer="true"
        app:layoutManager="LinearLayoutManager"
        tools:context=".contacts.ConnectionsSearchFragment"
        tools:listitem="@layout/fragment_connectionssearch">

    </android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/et_connectionsearch_searchbar"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="106dp"
        android:textColor="?android:textColorSecondary"
        android:ems="10"
        android:hint="@string/connectionsearch_search"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_connectionsearch_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:text="@string/connectionsearch_search" />

</RelativeLayout>